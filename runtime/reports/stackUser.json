{
  "name": "stack User",
  "description": "Test report for Mysql stackexchange",

  "require": ["query","server"],

  "datasets":[
    {
      "name" : "query",
      "show": "*",
      "type" :  "form",
      "position" : "nav",
      "require" : ["lookup_test"],
      "columns": {
        "id": {
          "header" : "Geef hier userId in",
          "template" : "number",
          "max" : 2000,
          "required" : true
        },
        "level": {
          "template": "select",
          "lookup": "lookup_test"
        }
      }
    },
    {
      "name" : "args",
      "show": "*",
      "type" :  "table",
      "source" : "copy",
      "from" : "query",
      "position" : "tabs",
      "columns": {
        "id": {
          "type": "parseInt",
          "input" : {
            "type": "number"
          }
        }
      }
    },

    {
      "name" : "lookup_test",
      "show": "*",
      "type" :  "table",
      "source" : "inline",
      "position" : "main",
      "data" : [
        {"key": 1, "value": "een", "display": "een" },
        {"key": 2, "value": "twee", "display": "twee" },
        {"key": 3, "value": "drie", "display": "drie" },
        {"key": 4, "value": "vier", "display": "vier" },
        {"key": 5, "value": "vijf", "display": "vijf" }
      ]
    },


    {
      "name" : "main",
      "description" : "",
      "type" : "table",
      "source" : "StackExchange",
      "class" : "zebra",
      "query" : "select * from users where id = {{args.id}}",
      "show" : "*",
      "columns": {
        "LastAccessDate": {
          "display": "date",
          "header": "Last Access",
          "year1": "numeric",
          "month1": "long"
        },
        "Details": {
          "type": "link",
          "header": "link",
          "relative": true,
          "template": "aLink"
        },
        "AboutMe": {
          "display": "html"
        },
        "url": {
          "type": "format",
          "format": "/report/stackUser.html?id={{Id}}&paging.limit=20"
        },
        "imgUrl": {
          "type": "hbs",
          "format": "<img src='{{ProfileImageUrl}}'/>"
        },
        "img": {
          "type": "hbs",
          "display" : "html",
          "format": "<img src='{{ProfileImageUrl}}'/>"
        }
      }
      },
    {
      "name" : "posts",
      "description" : "",
      "position": "tabs",
      "source" : "StackExchange",
      "query" : "select count(*) as total, min(CreaionDate) as first, max(CreaionDate) as last  from posts where OwnerUserId = {{args.id}}",
      "show" : "*"
    }

  ],

  "output": {
    "json": {
      "include": ["query","paging","main","log"],
      "type" : "json"
    },
    "html": {
      "include": ["query","main","args","posts","server","log"],
      "argForm": {
          "dataset": "args",
          "extension" : "html"
      },
      "template": "tabs",
      "type" : "hbs",
      "reload" : true
    },
    "arg": {
      "include" : ["args","query"],
      "extension" : "html",
      "type": "hbs",
      "template": "general"

    }
  }
}