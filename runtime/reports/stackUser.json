{
  "name": "stack User",
  "description": "Test report for Mysql stackexchange",

  "require": ["query","server"],

  "datasets":[
    {
      "name" : "query",
      "show": "*",
      "type" :  "form",
      "position" : "nav",
      "columns": {
        "id": {
          "header" : "Geef hier userId in",
          "template" : "number",
          "max" : 20,
          "required" : true
        }
      }
    },


    {
      "name" : "args",
      "show": "*",
      "type" :  "table",
      "source" : "copy",
      "from" : "query",
      "position" : "tabs",
      "columns": {
        "id": {
          "type": "parseInt",
          "input" : {
            "type": "number"
          }
        }
      }
    },


    {
      "name" : "main",
      "description" : "",
      "type" : "table",
      "source" : "StackExchange",
      "style" : "zebra",
      "query" : "select * from users where id = {{args.id}}",
      "show" : "*",
      "columns": {
        "LastAccessDate": {
          "display": "date",
          "header": "Last Access",
          "year1": "numeric",
          "month1": "long"
        },
        "Details": {
          "type": "link",
          "header": "link"

        },
        "AboutMe": {
          "display": "html"
        },
        "url": {
          "type": "format",
          "format": "test test "
        }
      }
      },
    {
      "name" : "posts",
      "description" : "",
      "position": "tabs",
      "source" : "StackExchange",
      "query" : "select count(*) as total, min(CreaionDate) as first, max(CreaionDate) as last  from posts where OwnerUserId = {{args.id}}",
      "show" : "*"
    }

  ],

  "output": {
    "json": {
      "include": ["query","paging","main","log"],
      "type" : "json"
    },
    "html": {
      "include": ["query","main","args","posts","server","log"],
      "argForm": {
          "dataset": "args",
          "extension" : "html"
      },
      "template": "tabs",
      "type" : "hbs",
      "reload" : true
    },
    "arg": {
      "include" : ["args","query"],
      "target" : "html",
      "argForm": {
        "dataset": "args",
        "extention" : "html"
      },
      "type": "hbs",
      "template": "general"

    }
  }
}