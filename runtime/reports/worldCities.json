{
  "name": "stack User",
  "description": "Test report for Mysql stackexchange",

  "require": ["query","server"],

  "datasets":[
    {
      "name" : "query",
      "show": "",
      "type" :  "form",
      "position" : "nav",
      "columns": {
        "code": {
          "hidden":true,
          "header" : "Geef hier de landcode in",
          "template" : "text"
        },
        "city2": {
          "hidden":true,
          "header" : "Geef hier de stad in",
          "template": "text",
          "type": "format",
          "format": "%{{city}}%"
        }
      }
    },

    {
      "name" : "main",
      "description" : "",
      "type" : "table",
      "source" : "world",
      "paging" : true,
      "class" : "zebra",
      "query" : ["select * from City where 1=1 ",
        { "condition": "available", "key":"query.code",
          "query": { "condition": "array", "key":"query.code", "query": " and CountryCode in ({{query.code}}) ", "else": " and CountryCode = {{query.code}} "},
          "else": { "condition": "available", "key":"query.city", "query": " and Name like {{query.city2}} ", "else":" and 1=2 " }
        }
      ],
      "show" : "*",
      "columns": {
      }
    }

  ],

  "output": {
    "json": {
      "include": ["query","paging","main","log"],
      "type" : "json"
    },
    "html": {
      "include": ["main","server","log"],
      "argForm": {
          "dataset": "query",
          "extension" : "html"
      },
      "template": "general",
      "type" : "hbs",
      "reload" : true
    },
    "arg": {
      "include" : ["args","query"],
      "extension" : "html",
      "type": "hbs",
      "template": "general"

    }
  }
}